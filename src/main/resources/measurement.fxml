<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controllers.MeasurementController">
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Add new Measurement">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font></Label>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Separator />
                  <Label alignment="TOP_LEFT" text="Select the sensors">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <HBox alignment="TOP_CENTER" spacing="20.0">
                     <children>
                        <VBox fx:id="sensorVbox1" alignment="CENTER_LEFT" spacing="10.0" />
                        <VBox fx:id="sensorVbox2" alignment="CENTER_LEFT" spacing="10.0" />
                        <VBox fx:id="sensorVbox3" alignment="CENTER_LEFT" spacing="10.0" />
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </HBox>
                  <Separator />
                  <Label alignment="TOP_LEFT" text="Select the watches">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <HBox alignment="TOP_CENTER" spacing="20.0">
                     <children>
                        <VBox fx:id="watchVbox1" alignment="CENTER_LEFT" spacing="10.0" />
                        <VBox fx:id="watchVbox2" alignment="CENTER_LEFT" spacing="10.0" />
                        <VBox fx:id="watchVbox3" alignment="CENTER_LEFT" spacing="10.0" />
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </HBox>
                  <Separator />
                  <Label alignment="TOP_LEFT" text="Select the begin and end times">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <VBox fx:id="timesVbox" alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                     <children>
                        <HBox fx:id="startTimeHbox" alignment="CENTER" />
                        <HBox fx:id="endTimeHbox" alignment="CENTER" />
                     </children></VBox>
                  <Separator />
                  <Button mnemonicParsing="false" onAction="#startMeasurement" text="Start" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
   <padding>
      <Insets bottom="10.0" top="10.0" />
   </padding>
</BorderPane>
