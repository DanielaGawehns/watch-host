<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controllers.MeasurementController">
    <top>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Label text="Select sensors with the desired polling interval" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>

            <VBox fx:id="sensorList" alignment="TOP_CENTER" prefWidth="220.0" spacing="3.0" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <VBox fx:id="sensorList2" alignment="TOP_CENTER" prefWidth="220.0" spacing="3.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <VBox fx:id="sensorList3" alignment="TOP_CENTER" prefWidth="220.0" spacing="3.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Separator GridPane.columnSpan="3" GridPane.rowIndex="2" />

            <Label text="Select watches on which to perform the measurement" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <VBox fx:id="connectedWatches" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <Separator GridPane.columnSpan="3" GridPane.rowIndex="5" />

            <Label text="Enter how long the measurement must take" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <HBox fx:id="durationHBox" prefHeight="20.0" prefWidth="200.0" GridPane.rowIndex="7" />
            <Button fx:id="startMeasurementButton" mnemonicParsing="false" onAction="#startMeasurement" prefHeight="20.0" prefWidth="200.0" style="-fx-background-color: #a9a9a9" text="Start Measurement" GridPane.rowIndex="8">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <padding> <Insets bottom="5" top="5" /> </padding>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </GridPane>
    </top>
</BorderPane>
