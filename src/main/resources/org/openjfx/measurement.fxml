<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.MeasurementController">
    <top>
        <GridPane hgap="10" vgap="10">
            <Label text="Select sensors with the desired polling interval" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <padding> <Insets top="5" bottom="5" /> </padding>

            <VBox fx:id="sensorList" GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="220.0" alignment="TOP_CENTER" spacing="3.0"  />
            <VBox fx:id="sensorList2" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="220.0" alignment="TOP_CENTER" spacing="3.0" />
            <VBox fx:id="sensorList3" GridPane.columnIndex="2" GridPane.rowIndex="1" prefWidth="220.0" alignment="TOP_CENTER" spacing="3.0" />
            <Separator GridPane.columnSpan="3" GridPane.rowIndex="2" />

            <Label text="Select watches on which to perform the measurement" GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.columnIndex="0" >
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <VBox fx:id="connectedWatches" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <Separator GridPane.columnSpan="3" GridPane.rowIndex="5" />

            <Label text="Enter how long the measurement must take" GridPane.columnSpan="2" GridPane.rowIndex="6" GridPane.columnIndex="0" >
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <HBox fx:id="durationHBox" GridPane.rowIndex="7" prefWidth="200.0" prefHeight="20.0" />
            <Button fx:id="startMeasurementButton" mnemonicParsing="false" GridPane.rowIndex="8" prefWidth="200.0" prefHeight="20.0" text="Start Measurement" onAction="#startMeasurement" style="-fx-background-color: #a9a9a9">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
        </GridPane>
    </top>
