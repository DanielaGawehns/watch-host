<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="view" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.WatchViewController">
   <center>
      <ScrollPane fx:id="scrollMain" fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <content>
            <VBox alignment="CENTER">
               <children>
                  <LineChart fx:id="sensorChart" disable="true" title="Heart Rate">
                     <xAxis>
                        <CategoryAxis animated="false" label="Time" side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis animated="false" label="Heart Rate (BPM)" side="LEFT" />
                     </yAxis>
                  </LineChart>
                  <VBox fx:id="commentsBox" />
                  <LineChart fx:id="pressureChart" animated="false" createSymbols="false" disable="true" title="Pressure" verticalGridLinesVisible="false">
                    <xAxis>
                      <CategoryAxis animated="false" label="Time" side="BOTTOM" tickMarkVisible="false" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis animated="false" label="Pressure (Pa)" minorTickVisible="false" side="LEFT" />
                    </yAxis>
                  </LineChart>
                  <LineChart disable="true" title="Gravity">
                    <xAxis>
                      <NumberAxis label="Time" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis label="Gravity" side="LEFT" />
                    </yAxis>
                  </LineChart>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/smartwatch.png" />
                     </image>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ImageView>
                  <VBox alignment="CENTER">
                     <children>
                        <Label fx:id="watchNameLabel" text="WatchName" />
                        <Label fx:id="watchNrLabel" text="WatchNr" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/battery3.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="60.0" />
                     </HBox.margin>
                  </ImageView>
                  <VBox alignment="CENTER">
                     <children>
                        <Label fx:id="batteryLevelLabel" text="BatteryLevel" />
                        <Label fx:id="batteryRemainingLabel" text="EstimatedRemainingTime" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER">
                     <children>
                        <Label text="Storage" />
                        <ProgressBar fx:id="storageBar" prefWidth="200.0" progress="0.0" />
                        <Label fx:id="storageLabel" text="StorageLevel" />
                     </children>
                     <HBox.margin>
                        <Insets left="60.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#optionsPressed" prefHeight="25.0" prefWidth="75.0" text="Options" />
                        <Button mnemonicParsing="false" text="Disconnect" />
                        <Button mnemonicParsing="false" text="Add Comments" onAction="#addComments" />
                     </children>
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <Separator prefWidth="200.0" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="Current measurement:" />
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Label text="Heart Rate" />
                        <Label text="Pressure" />
                     </children>
                  </VBox>
                  <Label text="For: 1 hour 20 minutes" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <Separator prefWidth="200.0" />
         </children>
      </VBox>
   </top>
</BorderPane>
