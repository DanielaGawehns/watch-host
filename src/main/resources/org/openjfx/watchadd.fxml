<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.WatchAddController">
   <children>
      <Label text="Register a new watch" />
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="ID" />
            <TextField fx:id="textfieldID" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="textfieldName" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Label text="IP-address" />
            <TextField fx:id="textfieldIP" />
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="buttonConnect" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#connectButtonPressed" text="Connect" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
